 return _context3.a(2);\n          }\n        }, _callee3, null, [[1, 5]]);\n      }))();\n    },\n    watchTogether: function watchTogether() {\n      var _this4 = this;\n      return _asyncToGenerator(/*#__PURE__*/_regenerator().m(function _callee4() {\n        var response, _t3;\n        return _regenerator().w(function (_context4) {\n          while (1) switch (_context4.n) {\n            case 0:\n              _context4.p = 0;\n              _context4.n = 1;\n              return _watchTogether(_this4._id);\n            case 1:\n              response = _context4.v;\n              console.log('‰∏ÄËµ∑Áúã ÂìçÂ∫î:', response);\n              if (response.data.code === 0) alert('ËØ∑ÁôªÂΩïÂêéÂÜçÂèëÈÄÅÂô¢');else alert('Â∑≤ÂêëSattiÂèëÈÄÅ‰∏ÄËµ∑ÁúãÈÇÄËØ∑');\n              _context4.n = 3;\n              break;\n            case 2:\n              _context4.p = 2;\n              _t3 = _context4.v;\n              console.error('‰∏ÄËµ∑ÁúãÂäüËÉΩÂá∫Èîô‰∫Ü:', _t3);\n            case 3:\n              return _context4.a(2);\n          }\n        }, _callee4, null, [[0, 2]]);\n      }))();\n    },\n    sendComment: function sendComment() {\n      var _this5 = this;\n      return _asyncToGenerator(/*#__PURE__*/_regenerator().m(function _callee5() {\n        var response, _t4;\n        return _regenerator().w(function (_context5) {\n          while (1) switch (_context5.n) {\n            case 0:\n              _context5.p = 0;\n              _context5.n = 1;\n              return _sendComment(_this5._id, _this5.comment);\n            case 1:\n              response = _context5.v;\n              console.log('ÂèëÈÄÅËØÑËÆ∫ ÂìçÂ∫î:', response);\n              if (response.data.code === '0') alert('ËØ∑ÁôªÂΩïÂêéÂÜçÂèëÈÄÅÂô¢');else alert('Â∑≤ÂêëSattiÂèëÈÄÅÁîµÂΩ±ËØÑËÆ∫');\n              _this5.comment = ''; // Clear the input after sending the comment\n              _context5.n = 3;\n              break;\n            case 2:\n              _context5.p = 2;\n              _t4 = _context5.v